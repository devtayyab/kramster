{
  "name": "kramster",
  "version": "2.0.0",
  "description": "Kramster is a quiz app for making exam preparation more fun",
  "main": "src/server/server.js",
  "scripts": {
    "start": "nodemon src/server/server.js --exec babel-node",
    "build": "rm -rf dist/ && NODE_ENV=production webpack --progress --config webpack.config.prod.js && babel src/server -d dist/server && npm run copy",
    "prod": "npm run build && NODE_ENV=production node dist/server/server.js",
    "copy": "cp src/client/index.html dist/client/ && cp -r src/client/assets dist/client/assets && cp src/client/manifest.json dist/client/",
    "lint": "eslint --ext js,jsx src/ && stylelint src/**/*.css",
    "test": "mocha"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/draperunner/Kramster.git"
  },
  "author": "Mats Byrkjeland",
  "license": "Apache-2.0",
  "dependencies": {
    "bluebird": "^3.5.1",
    "body-parser": "^1.18.3",
    "chart.js": "^2.7.2",
    "express": "^4.16.3",
    "moment": "^2.22.2",
    "mongoose": "^4.13.14",
    "prop-types": "^15.6.2",
    "qs": "^6.5.2",
    "react": "^15.6.2",
    "react-chartjs-2": "^2.7.4",
    "react-dom": "^15.6.2",
    "react-flexbox-grid": "^1.1.3",
    "react-ga": "^2.5.3",
    "react-redux": "^5.0.7",
    "react-router": "^3.2.1",
    "redux": "^3.6.0",
    "sanitize-html": "^1.18.2",
    "whatwg-fetch": "^2.0.4",
    "wilson-score": "^1.0.0"
  },
  "devDependencies": {
    "babel-cli": "^6.22.2",
    "babel-core": "^6.26.3",
    "babel-loader": "^6.4.1",
    "babel-plugin-transform-es2015-destructuring": "^6.23.0",
    "babel-plugin-transform-object-rest-spread": "^6.23.0",
    "babel-preset-es2015": "^6.24.0",
    "babel-preset-react": "^6.23.0",
    "css-loader": "^0.26.1",
    "eslint": "^3.19.0",
    "eslint-config-airbnb": "^15.0.0",
    "eslint-config-airbnb-base": "^11.2.0",
    "eslint-plugin-import": "^2.13.0",
    "eslint-plugin-jsx-a11y": "^5.0.1",
    "eslint-plugin-react": "^7.10.0",
    "ink-docstrap": "^1.3.2",
    "json-loader": "^0.5.4",
    "mocha": "^5.2.0",
    "nodemon": "^1.18.3",
    "react-hot-loader": "^1.3.1",
    "should": "^13.2.1",
    "style-loader": "^0.13.1",
    "stylelint": "^7.10.1",
    "stylelint-config-standard": "^16.0.0",
    "supertest": "^3.1.0",
    "webpack": "^2.3.2",
    "webpack-dev-middleware": "^1.12.2",
    "webpack-dev-server": "^2.11.2",
    "webpack-hot-middleware": "^2.22.3",
    "webpack-merge": "^4.1.3"
  }
}
